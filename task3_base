#include <iostream>
#include <cmath>


int main()
{
    setlocale(LC_ALL, "RU"); // українського кодування на жаль не знайшов 

    int x,y,z ;
    std::cout << "Введіть значення x:";
    std::cin >> x;
    std::cout << "Введіть значення y:";
    std::cin >> y;
    std::cout << "Введіть значення z:";
    std::cin >> z;

    float t1, t2 ;

    t1 = (x + y) / (x - 0.5) - (x - z) / (x * y);
    t2 = ( (1 + z) * (x + y / z) ) / (x - 1 / (1 + pow(x, 2)));

    std::cout << "Результат першого ваіранту виразу =" << t1 << "Результат другого ваіранту виразу =" << t2;
}

