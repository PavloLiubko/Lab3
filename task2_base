include <iostream>
#include <cmath>


int main()
{
    setlocale(LC_ALL, "RU"); // українського кодування на жаль не знайшов 

    int a,b,c ;
    std::cout << "Введіть значення першої сторони трикутника:";
    std::cin >> a;
    std::cout << "Введіть значення другої сторони трикутника:";
    std::cin >> b;
    std::cout << "Введіть значення третьої сторони трикутника:";
    std::cin >> c;

    int P, S, p;

    P = a + b + c;

    p = P / 2;

    S = sqrt(p * (p - a) * (p - b) * (p - c));

    std::cout << "Периметр вашого трикутника =" << P << "\n" << "Площа вашого трикутника =" << S;

}
